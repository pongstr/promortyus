{
  "name": "@pongstr/database",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "license": "ISC",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "exports": {
    ".": "./src/index.ts",
    "./migrations": "./src/migrations"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/pongstr/promortyus.git",
    "directory": "packages/database"
  },
  "scripts": {
    "format": "prettier --write .",
    "migrate": "pnpm db:generate && pnpm db:migrate",
    "db:migrate": "tsx src/migrate.ts",
    "db:generate": "drizzle-kit generate",
    "db:introspect": "drizzle-kit introspect --config=./src/introspect.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@vercel/postgres": "^0.9.0",
    "drizzle-orm": "^0.32.0",
    "eslint": "^8.57.0",
    "pg": "^8.11.3",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@pongstr/eslint-config": "workspace:*",
    "@types/cli-color": "^2.0.6",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.10.9",
    "cli-color": "^2.0.3",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.23.0",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
