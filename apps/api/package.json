{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "author": "@pongstr",
  "main": "index.ts",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "format": "prettier --write .",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts",
    "migrate": "pnpm db:generate && pnpm db:migrate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:generate": "drizzle-kit generate --config=./src/drizzle.config.ts",
    "db:introspect": "drizzle-kit introspect --config=./src/db/introspect.ts"
  },
  "dependencies": {
    "@fastify/autoload": "^5.10.0",
    "@fastify/cors": "^8.4.2",
    "@fastify/jwt": "^8.0.1",
    "@vercel/postgres": "^0.9.0",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.32.0",
    "fastify": "^4.28.1",
    "fastify-plugin": "^4.5.1",
    "pg": "^8.11.3",
    "zod": "^3.23.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cli-color": "^2.0.6",
    "@types/node": "^20.12.7",
    "@types/pg": "^8.10.9",
    "@pongstr/eslint-config": "workspace:*",
    "@pongstr/typescript-config": "workspace:*",
    "cli-color": "^2.0.3",
    "drizzle-kit": "^0.23.0",
    "dotenv": "^16.3.1",
    "prettier": "^3.3.3",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.7.1",
    "typescript": "^5.4.5"
  }
}
